<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:text="Username"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/username_textView_new_message"
            app:layout_constraintTop_toTopOf="@+id/imageView_new_message_row"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_new_message_row"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/imageView_new_message_row"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView_new_message_row" android:layout_marginTop="16dp"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>